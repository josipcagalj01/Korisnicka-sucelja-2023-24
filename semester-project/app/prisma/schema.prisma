// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_LOCAL")
  directUrl = env("DATABASE_URL_LOCAL")
}

model User {
  id  Int @id @default(autoincrement())
  pin String @unique
  name String
  surname String
  address String
  category Int
  email String  @unique
  username  String  @unique
  password  String
}
